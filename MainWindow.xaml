<Window x:Class="MCModsInstalleur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCModsInstalleur"
        mc:Ignorable="d"
        Title="Installer un mod Minecraft"
        Height="450" Width="800"
        Background="#454545"
        MaxHeight="450"
        MaxWidth="800"
        >
    <Grid>
        <Button
            Content="Installer un mod"
            FontSize="30"
            Margin="434,176,64,176"
            Click="InstallMod"
            BorderBrush="White"
            BorderThickness="3.5"
            Background="Transparent"
        />

        <Button
            Content="Desinstaller un mod"
            FontSize="30"
            Margin="64,176,434,176"
            Click="UninstallMod"
            BorderBrush="White"
            BorderThickness="3.5"
            Background="Transparent"
        />

        <Button
            Content="CurseForge"
            FontSize="20"
            Margin="10,10,623,360"
            BorderBrush="White"
            BorderThickness="2.5"
            Background="Transparent"
            Click="CurseForge"
        />
    </Grid>
</Window>
